
.mask {
	position: fixed;
	width: 100%;
	height: 100%;
	bottom: 0;
	left: 0;
	background: rgba(0, 0, 0, 0.1);
	z-index: 1000;
	-webkit-transition: all 0.3s;
	transition: all 0.3s;
}
.input-content {
	position: absolute;
	width: 100%;
	height: 20%;
	left: 0;
	bottom: 0;
	background: #fff;
	overflow: hidden;
	-webkit-transition: all 0.3s;
	transition: all 0.3s;
}
.buttons {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	color: red;
	/* margin-bottom:40rpx; */
	padding: 20rpx 40rpx;
	font-family: 'Microsoft YaHei';
	font-size: 36rpx;
	border-bottom: 1rpx solid #f5f5f5;
}
.cancel {
	color: #888;
}
.comfirm {
	color: #007aff;
}
.input-clock {
	text-align: center;
}
.input-clock-name {
	position: absolute;
	display: inline-block;
	width: 80%;
	height: 50rpx;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	border-bottom: 1px solid rgba(192, 192, 192, .8);
	text-align: center;
	font-size: 30rpx;
}

