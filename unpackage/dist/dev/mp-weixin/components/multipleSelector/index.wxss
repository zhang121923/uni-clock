
.mask {
	position: fixed;
	width: 100%;
	height: 100%;
	bottom: 0;
	left: 0;
	background: rgba(0, 0, 0, 0.1);
	z-index: 1000;
	-webkit-transition: all 0.3s;
	transition: all 0.3s;
}
.content1 {
	background: #fff;
	height: 40%;
	position: absolute;
	overflow: hidden;
	left: 0;
	bottom: 0;
	width: 100%;
	-webkit-transition: all 0.3s;
	transition: all 0.3s;
}
